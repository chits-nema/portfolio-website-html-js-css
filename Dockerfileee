# Dockerfile
FROM python:3.9

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    libglib2.0-0

# Install Python packages
RUN pip install ultralytics supervision opencv-python flask requests numpy

WORKDIR /app
COPY linux_server.py .

EXPOSE 5000
CMD ["python", "linux_server.py"]
